

<%= form_tag('change_pass', method: :get) do %>

<div class="large-6  large-centered columns auth-plain">
	<div class="signup-panel left-solid">
		<h3 class="welcome text-center">Cambia tu Contraseña</h3>
		
		<div class="row collapse">
			<p>Contraseña</p>
			<div class="small-2  columns">
				<span class="prefix"><i class="fi-unlock"></i></span>
			</div>
			<div class="small-10  columns">
				<%= password_field_tag :pass %>
			</div>
		</div>

		<div class="row collapse">
			<p>Confirmacion de Contraseña</p>
			<div class="small-2  columns">
				<span class="prefix"><i class="fi-unlock"></i></span>
			</div>
			<div class="small-10  columns">
				<%= password_field_tag :confirm_pass %>
				<%= hidden_field_tag :email, params[:email]%>
			</div>
		</div>

		<%= submit_tag "Seguir", class:"button expand radius"%> 
	</div> 	
</div>
<% end %>
